@import '../../mixin'

.painter
  width 320px
  border 1px solid #996
  flex-wrap wrap
  $display-flex()
  
  &__stretcher-wrap
    $display-flex()
  
  &__stretcher
    position relative
    border 1px solid grey
    overflow hidden
    background-image url('./trans-pattern-s.jpg')
        
  &__indicator
    position absolute
    width 16px 
    height 16px
    background #aaa
    border 1px solid #666
    transform translate(-1px, -1px)
  
  &__tool
    clear both
    $display-flex()
  
  &__palette-wrap
    flex-basis 100%
