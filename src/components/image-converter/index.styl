@import '../../mixin'

.image-converter
  width 320px
  height 100vh
  border 1px solid #996
  position relative

  &__preview
    width 100%
    height 100%
    $display-flex()

  &__input-img
    max-width 100%
    
  &__tool
  	position absolute
    z-index 10
  	width 100%
  	top 0
  	left 0
    $display-flex()
  
  &__select-input
  	display none
    
